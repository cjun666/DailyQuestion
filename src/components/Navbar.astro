function loadButtonScript() {
    console.log('ðŸŸ  Navbar.astro: loadButtonScript called');
    
    // ä¸»é¢˜åˆ‡æ¢æŒ‰é’®çŽ°åœ¨ç”± Svelte ç»„ä»¶å¤„ç†ï¼Œä¸å†éœ€è¦è¿™é‡Œçš„å¤‡ç”¨æ–¹æ¡ˆ
    // åªä¿ç•™å…¨å±€ç‚¹å‡»ç›‘å¬å™¨ä½œä¸ºæœ€åŽçš„ä¿éšœï¼ˆç”¨äºŽå¤„ç†æŒ‰é’®è¢«è¦†ç›–çš„æƒ…å†µï¼‰
    
    // ä¸å†éœ€è¦ MutationObserverï¼ŒæŒ‰é’®å·²ç»å¯ä»¥æ­£å¸¸å·¥ä½œ
    
    // å…¨å±€ç‚¹å‡»ç›‘å¬å™¨ä½œä¸ºæœ€åŽçš„ä¿éšœï¼ˆä»…åœ¨æŒ‰é’®è¢«è¦†ç›–æ—¶ä½¿ç”¨ï¼‰
    // æ³¨æ„ï¼šä¸è¦é˜»æ­¢äº‹ä»¶ä¼ æ’­ï¼Œè®© Svelte çš„åŽŸç”Ÿäº‹ä»¶å¤„ç†å™¨ä¹Ÿèƒ½å·¥ä½œ
    const globalClickHandler = function(e: MouseEvent) {
        const target = e.target as HTMLElement;
        if (!target) return;
        
        // æ£€æŸ¥ç‚¹å‡»ä½ç½®æ˜¯å¦åœ¨æŒ‰é’®åŒºåŸŸå†…ï¼Œä½†æŒ‰é’®è¢«è¦†ç›–
        const button = document.getElementById('scheme-switch') as HTMLElement;
        if (button) {
            const rect = button.getBoundingClientRect();
            const clickX = e.clientX;
            const clickY = e.clientY;
            const isInButtonArea = clickX >= rect.left && clickX <= rect.right && 
                                   clickY >= rect.top && clickY <= rect.bottom;
            
            // æ£€æŸ¥æŒ‰é’®æ˜¯å¦è¢«è¦†ç›–
            const elementAtPoint = document.elementFromPoint(clickX, clickY);
            const isButtonCovered = elementAtPoint !== button && !button.contains(elementAtPoint);
            
            // åªæœ‰åœ¨æŒ‰é’®è¢«è¦†ç›–æ—¶æ‰å¤„ç†
            if (isInButtonArea && isButtonCovered) {
                console.log('ðŸŸ ðŸŸ ðŸŸ  GLOBAL CLICK HANDLER: Button is covered, handling click!');
                
                // ç›´æŽ¥åˆ‡æ¢ä¸»é¢˜ï¼ˆåªåœ¨ light å’Œ dark ä¹‹é—´åˆ‡æ¢ï¼‰
                const currentTheme = localStorage.getItem('theme') || 'light';
                const nextTheme = currentTheme === 'light' ? 'dark' : 'light';
                
                console.log('ðŸŸ  Global handler: Switching from', currentTheme, 'to', nextTheme);
                
                localStorage.setItem('theme', nextTheme);
                const html = document.documentElement;
                if (nextTheme === 'light') {
                    html.classList.remove('dark');
                } else {
                    html.classList.add('dark');
                }
                
                window.dispatchEvent(new CustomEvent('theme-changed', { detail: { theme: nextTheme } }));
            }
        }
    };
    
    // åªåœ¨æ•èŽ·é˜¶æ®µæ·»åŠ ï¼Œä¸é˜»æ­¢äº‹ä»¶ä¼ æ’­
    document.addEventListener('click', globalClickHandler, { capture: true, passive: true });
    
    // ä¸»é¢˜åˆ‡æ¢æŒ‰é’®çŽ°åœ¨ç”± Svelte ç»„ä»¶å¤„ç†ï¼Œä¸éœ€è¦é¢å¤–çš„è®¾ç½®

    let settingBtn = document.getElementById("display-settings-switch");
    if (settingBtn) {
        settingBtn.onclick = function () {
            let settingPanel = document.getElementById("display-setting");
            if (settingPanel) {
                settingPanel.classList.toggle("float-panel-closed");
            }
        };
    }

    let menuBtn = document.getElementById("nav-menu-switch");
    if (menuBtn) {
        menuBtn.onclick = function () {
            let menuPanel = document.getElementById("nav-menu-panel");
            if (menuPanel) {
                menuPanel.classList.toggle("float-panel-closed");
            }
        };
    }
}

// ç¡®ä¿åœ¨ DOM åŠ è½½åŽæ‰§è¡Œ
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', loadButtonScript);
} else {
    loadButtonScript();
}

// é¡µé¢åˆ‡æ¢åŽé‡æ–°æ‰§è¡Œï¼ˆAstro View Transitionsï¼‰
document.addEventListener('astro:after-swap', () => {
    setTimeout(loadButtonScript, 100);
});
</script>

